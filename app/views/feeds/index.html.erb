<p id="notice"><%= notice %></p>


      <div id="header-right">
        <% if logged_in? %>
          <span class="label label-info"><%= link_to "プロフィール", user_path(current_user.id) %></span>
          <span class="label label-danger"><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></span>
        <% else %>
          <span class="label label-primary"><%= link_to "新規登録", new_user_path %></span>
          <span class="label label-success"><%= link_to "ログイン", new_session_path %></span>
        <% end %>
      </div>

<h1>Feeds</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.user.name %></td>
        <td><%= image_tag feed.image.url %></td>
        <td><%= feed.content %></td>
        <td><%= link_to 'Show', feed %></td>
        <% if current_user == feed.user %>
          <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
          <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path %>
